@code {
    MemoryStream documentStream;
    //Hidden:Lines
    
    Dictionary<string, MemoryStream> fileData = new Dictionary<string, MemoryStream>();
    
    //End:Hidden

    /// <summary>
    /// Create and download the Presentation document
    /// </summary>
    public async Task CreateProtection(MouseEventArgs args)
    {
        await LoadTemplate();
        WriteProtectionService service = new WriteProtectionService(fileData);
        documentStream = service.CreateWriteProtectionPresentation("Syncfusion");
        service.Close();
        documentStream.Position = 0;
        SaveService saveService = new();
        saveService.SaveAndView("ProtectedPresentation.pptx", "application/vnd.openxmlformats-officedocument.presentationml.presentation", documentStream);
    }
    /// <summary>
    /// Load the template document
    /// </summary>
    public async Task LoadTemplate()
    {
        if (fileData != null && fileData.Count == 0)
        {
            string basePath = "Blazor_MAUI_Demos.wwwroot.data.powerpoint.transition.pptx";
            Stream DocumentStream = this.GetType().Assembly.GetManifestResourceStream(basePath);
            MemoryStream memoryStream = new MemoryStream();
            DocumentStream.CopyTo(memoryStream);
            memoryStream.Position = 0;
            fileData.Add("transition.pptx", memoryStream);
            DocumentStream.Dispose();
        }
    }
}