    //Hidden:Lines
    private string canonicalURL { get; set; }

    protected override void OnInitialized()
    {
        canonicalURL = NavigationManager.Uri.Split("?")[0];
    }
    //End:Hidden
    public string[] MulVal = null;
    public int MaxSelection { get; set; } = 3;
    public class Countries
